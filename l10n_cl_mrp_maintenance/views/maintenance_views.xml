<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- equipment.stage : views -->
    <record id="hr_equipment_stage_view_search" model="ir.ui.view">
        <field name="name">equipment.stage.search</field>
        <field name="model">maintenance.stage</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_stage_view_search"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <separator/>
                <filter string="Request Bill of Material" name="request_bom" domain="[('request_bom', '=', True)]"/>
                <filter string="Require Bill of Material" name="require_bom" domain="[('require_bom', '=', True)]"/>
            </field>
        </field>
    </record>

    <record id="hr_equipment_stage_view_tree" model="ir.ui.view">
        <field name="name">equipment.stage.tree</field>
        <field name="model">maintenance.stage</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_stage_view_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="request_bom"/>
                <field name="require_bom"/>
            </field>
        </field>
    </record>


    <!-- equipment guideline : views -->
    <record id="maintenance_guideline_view_form" model="ir.ui.view">
        <field name="name">maintenance.guideline.form</field>
        <field name="model">maintenance.guideline</field>
        <field name="inherit_id" ref="l10n_cl_maintenance.maintenance_guideline_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet//field[@name='guideline_type_id']" position="after">
                <field name="bom_id"/>
            </xpath>
        </field>
    </record>


    <!-- equipment.request : views -->
    <record id="hr_equipment_request_view_search" model="ir.ui.view">
        <field name="name">equipment.request.search</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="l10n_cl_maintenance.hr_equipment_request_view_search"/>
        <field name="arch" type="xml">
            <field name="equipment_activity_id" position="after">
                <field string="Bill of Material" name="bom_id"/>
                <field string="Warehouse" name="warehouse_id" groups="stock.group_stock_multi_warehouses"/>
                <field string="Maintenance Location" name="maintenance_location_id"/>
            </field>

            <xpath expr="//filter[@name='done']" position="after">
                <filter string="Done" name="done" domain="[('kanban_state', '=', 'done')]"/>
            </xpath>

            <xpath expr="//filter[@name='done']" position="attributes">
                <attribute name="name">ready</attribute>
                <attribute name="domain">[('picking_ids.state', '=', 'done')]</attribute>
            </xpath>
        </field>
    </record>

    <record id="hr_equipment_request_view_form" model="ir.ui.view">
        <field name="name">equipment.request.form</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="l10n_cl_maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/div[1]" position="before">
                <div class="oe_button_box" name="button_box">
                    <field name="picking_ids" invisible="1"/>
                    <button type="object"
                            name="action_view_delivery_bom"
                            class="oe_stat_button"
                            icon="fa-truck"
                            attrs="{'invisible': [('picking_count', '=', 0)]}" groups="base.group_user">
                        <field name="picking_count" widget="statinfo" string="BoM Delivery"/>
                    </button>
                </div>
            </xpath>

            <field name="maintenance_guideline_id" position="after">
                <field name="bom_id" attrs="{'invisible': [('maintenance_guideline_id', '=', False)]}"
                       context="{'default_company_id':company_id}"
                       options="{'no_create': 1, 'no_edit': 1,}"
                />
                <field name="warehouse_id" options="{'no_create': True}"
                       groups="stock.group_stock_multi_warehouses" force_save="1"
                />
                <field name="maintenance_location_id"
                       context="{'default_company_id':company_id}"
                       options="{'no_create': 1, 'no_edit': 1,}"
                />
            </field>
        </field>
    </record>


    <!-- maintenance.team: views -->
    <record id="maintenance_team_view_form" model="ir.ui.view">
        <field name="name">maintenance.team.form</field>
        <field name="model">maintenance.team</field>
        <field name="inherit_id" ref="maintenance.maintenance_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='member_ids']/.." position="after">
                <group>
                    <field name="maintenance_location_id"
                           context="{'default_company_id':company_id}"
                           options="{'no_create': True}"
                    />
                </group>
            </xpath>
        </field>
    </record>

    <record id="maintenance_team_view_tree" model="ir.ui.view">
        <field name="name">maintenance.team.tree</field>
        <field name="model">maintenance.team</field>
        <field name="inherit_id" ref="maintenance.maintenance_team_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='member_ids']" position="after">
                <field name="maintenance_location_id"
                       context="{'default_company_id':company_id}"
                       options="{'no_create': True}"
                />
            </xpath>
        </field>
    </record>

    <record id="maintenance_team_view_search" model="ir.ui.view">
        <field name="name">maintenance.team.search</field>
        <field name="model">maintenance.team</field>
        <field name="inherit_id" ref="maintenance.maintenance_team_view_search"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field string="Maintenance Location" name="maintenance_location_id"/>
            </field>
        </field>
    </record>


    <!-- Inherit Form View to Modify it -->
    <record id="mblz_maintenance_hr_equipment_view_kanban" model="ir.ui.view">
        <field name="name">mblz_maintenance_hr_equipment_view_kanban</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_kanban"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='activity_state']" position="after">
                <!-- Add your fields or attributes here -->
                <field name="id"/>
                <field name="image"/>
            </xpath>

            <xpath expr="//templates" position="replace">
                <templates>
                    <t t-name="kanban-tooltip">
                        <ul class="oe_kanban_tooltip">
                            <li t-if="record.serial_no.raw_value"><b>Serial Number:</b> <t
                                    t-esc="record.serial_no.value"/></li>
                            <li t-if="record.model.raw_value"><b>Model Number:</b> <t t-esc="record.model.value"/></li>
                        </ul>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('maintenance.equipment', 'image', record.id.raw_value)"
                                         alt="Equipo" class="o_image_64_contain"/>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <div t-attf-class="{{!selection_mode ? 'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) : ''}} oe_kanban_card oe_kanban_global_click">
                                    <div class="o_dropdown_kanban dropdown" t-if="!selection_mode">

                                        <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown"
                                           data-display="static" href="#" aria-label="Dropdown menu"
                                           title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <t t-if="widget.editable"><a role="menuitem" type="edit"
                                                                         class="dropdown-item">
                                                Edit...</a></t>
                                            <t t-if="widget.deletable"><a role="menuitem" type="delete"
                                                                          class="dropdown-item">
                                                Delete</a></t>
                                            <div role="separator" class="dropdown-divider"></div>
                                            <div role="separator" class="dropdown-header">Record Colour</div>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_content" tooltip="kanban-tooltip">
                                        <div class="o_kanban_record_top">
                                            <b class="o_kanban_record_title"><field name="name"/><small><span
                                                    t-if="record.model.raw_value"> (<field name="model"/>
                                                )</span></small></b>
                                        </div>
                                        <div class="o_kanban_record_body">
                                            <div t-if="record.serial_no.raw_value"><field name="serial_no"/></div>
                                        </div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <div class="badge badge-danger"
                                                     t-if="!selection_mode and record.maintenance_open_count.raw_value">
                                                    <t t-raw="record.maintenance_open_count.raw_value"/> Request
                                                </div>
                                                <div class="badge badge-secondary"
                                                     t-if="!selection_mode and record.next_action_date.raw_value">
                                                    <t t-raw="moment(record.next_action_date.raw_value).format('MMMM Do')"/>
                                                </div>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <div class="o_kanban_inline_block" t-if="!selection_mode">
                                                    <field name="activity_ids" widget="kanban_activity"/>
                                                </div>
                                                <field name="owner_user_id" widget="many2one_avatar_user"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>

            </xpath>

        </field>
    </record>


    <!-- equipment : views -->
    <record id="hr_equipment_view_form" model="ir.ui.view">
        <field name="name">equipment.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="l10n_cl_maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="before">
                <div style="width: 200px; height: 200px;">
                    <field name="image"
                           widget="image"
                           class="oe_right" options='{"preview_image": "image"}'/>
                </div>

            </xpath>
            <xpath expr="//form/sheet/notebook/page/field[@name='maintenance_guideline_ids']/kanban/field[@name='guideline_type_id']"
                   position="after">
                <field name="bom_id"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/field[@name='maintenance_guideline_ids']/form//field[@name='guideline_type_id']"
                   position="after">
                <field name="bom_id"/>
            </xpath>

            <xpath expr="//form/sheet/notebook" position="inside">
                <page name="page_data" string="Archivos">
                    <group>
                        <group>
                            <field name="image_ids" mode="kanban"
                                   context="{'default_equipment_id': active_id, 'default_company_id': company_id}">
                                <kanban>
                                    <field name="id"/>
                                    <field name="equipment_id"/>
                                    <field name="image"/>
                                    <field name="company_id" invisible="1"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('maintenance.equipment.image', 'image', record.id.raw_value)"
                                                         alt="Product" class="o_image_64_contain"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>

                                <form string="Imagénes">
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="image" widget="image"/>
                                            </group>
                                        </group>
                                        <field name="company_id" invisible="1"/>
                                    </sheet>
                                </form>

                            </field>
                        </group>
                        <group>
                            <field name="attachment_ids" string="Documentos" widget="many2many_binary"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="maintenance_equipment_view_form_inherit_mrp" model="ir.ui.view">
        <field name="name">maintenance.equipment.view.form.inherit.mrp</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="mrp_maintenance.maintenance_equipment_view_form_inherit_mrp"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='statistics']/label[@for='expected_mtbf']" position="before">
                <label for="mbfm_custom" string="Mean Time Between Failure Metric"/>
                <div class="o_row">
                    <field name="mbfm_custom" widget="radio" options="{'horizontal': true}"/>
                </div>
            </xpath>
            <xpath expr="//group[@name='statistics']/label[@for='expected_mtbf']/following-sibling::div[hasclass('o_row')]"
                   position="replace">
                <div class="o_row">
                    <field name="expected_mtbf"/>
                    <span attrs="{'invisible': [('mbfm_custom', '=', 'hours')]}">
                        days
                    </span>
                    <span attrs="{'invisible': [('mbfm_custom', '=', 'days')]}">hours</span>
                </div>
            </xpath>
            <xpath expr="//group[@name='statistics']/label[@for='mtbf']/following-sibling::div[hasclass('o_row')]"
                   position="replace">
                <div class="o_row">
                    <field name="mtbf" class="oe_read_only"/>
                    <span
                            attrs="{'invisible': [('mbfm_custom', '=', 'hours')]}">days
                    </span>
                    <span
                            attrs="{'invisible': [('mbfm_custom', '=', 'days')]}">hours
                    </span>
                </div>
            </xpath>
            <xpath expr="//group[@name='statistics']/label[@for='mttr']/following-sibling::div[hasclass('o_row')]"
                   position="replace">
                <div class="o_row">
                    <field name="mttr" class="oe_read_only"/>
                    <span
                            attrs="{'invisible': [('mbfm_custom', '=', 'hours')]}">days
                    </span>
                    <span
                            attrs="{'invisible': [('mbfm_custom', '=', 'days')]}">hours
                    </span>
                </div>
            </xpath>
        </field>
    </record>

</odoo>