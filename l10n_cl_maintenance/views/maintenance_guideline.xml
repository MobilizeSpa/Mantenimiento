<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- equipment guideline type : views -->
        <record id="maintenance_guideline_type_view_form" model="ir.ui.view">
            <field name="name">maintenance.guideline.type.form</field>
            <field name="model">maintenance.guideline.type</field>
            <field name="arch" type="xml">
                <form string="Equipment Guideline Type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Guideline Type Name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="prefix"/>
                                <field name="suffix"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"
                                       class="oe_inline"/>
                            </group>
                            <group/>
                        </group>
                        <group string="Preview (for prefix, suffix)">
                            <field name="preview" nolabel="1" colspan="4"/>
                        </group>
                    </sheet>
                    <!--                <div class="oe_chatter">-->
                    <!--                    <field name="message_follower_ids" widget="mail_followers"/>-->
                    <!--                    <field name="message_ids" widget="mail_thread"/>-->
                    <!--                </div>-->
                </form>
            </field>
        </record>

        <record id="maintenance_guideline_type_view_tree" model="ir.ui.view">
            <field name="name">maintenance.guideline.type.tree</field>
            <field name="model">maintenance.guideline.type</field>
            <field name="arch" type="xml">
                <tree string="Equipment Guideline Types">
                    <field name="name"/>
                    <field name="prefix"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="maintenance_guideline_type_view_search" model="ir.ui.view">
            <field name="name">maintenance.guideline.type.search</field>
            <field name="model">maintenance.guideline.type</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Guideline Type Name" filter_domain="[('name','ilike', self)]"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </search>
            </field>
        </record>

        <!-- equipment guideline type : actions -->
        <record id="maintenance_guideline_type_action" model="ir.actions.act_window">
            <field name="name">Maintenance Guideline Types</field>
            <field name="res_model">maintenance.guideline.type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="maintenance_guideline_type_view_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new equipment guideline type
                </p>
            </field>
        </record>

        <menuitem
                id="maintenance_guideline_type_menu_configuration"
                name="Maintenance Equipment Guideline Types"
                parent="maintenance.menu_maintenance_configuration"
                action="maintenance_guideline_type_action"
                groups="base.group_no_one"
                sequence="5"/>


        <record id="maintenance_guideline_view_form" model="ir.ui.view">
            <field name="name">maintenance.guideline.form</field>
            <field name="model">maintenance.guideline</field>
            <field name="arch" type="xml">
                <form string="Guideline Of Maintenance">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <hr/>
                        <group>
                            <group>
                                <field name="equipment_id" string="Equipo"/>
                                <field name="maintenance_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="guideline_type_id"/>
                                <field name="bool_in_request" invisible="1"/>
                            </group>
                            <group>
                                <field name="equipment_activity_id"/>
                                <field name="equipment_activity_uomctg_id" invisible="1"/>
                                <field name="measurement" widget="radio" options="{'horizontal': true}"/>
                                <div class="o_td_label">
                                    <label for="period" string="Frequency between each preventive maintenance"
                                           attrs="{'invisible': [('measurement', '=', 'fixed')]}"/>
                                    <label for="value" string="Value for preventive maintenance"
                                           attrs="{'invisible': [('measurement', '=', 'frequently')]}"/>
                                </div>
                                <div>
                                    <field name="period"
                                           attrs="{'invisible': [('measurement', '=', 'fixed')], 'required': [('measurement', '=', 'frequently')]}"
                                           nolabel="1"/>
                                    <field name="value"
                                           attrs="{'invisible': [('measurement', '=', 'frequently')], 'required': [('measurement', '=', 'fixed')]}"
                                           nolabel="1"/>
                                    <field name="uom_id" class="oe_no_button" nolabel="1"/>
                                </div>
                                <field name="maintenance_duration"/>
                            </group>
                        </group>
                        <field name="description"/>
                        <field name="company_id" invisible="1"/>

                        <notebook>
                            <page name="activities" string="Activities">
                                <field
                                        attrs="{'readonly': [('bool_in_request', '=', True)]}"
                                        name="activities_ids"
                                        widget="section_and_note_one2many"
                                        context="{'default_guideline_id' : id}"
                                        mode="tree,form">

                                    <tree string="Activies Lines"
                                          delete="0"
                                          editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="guideline_id" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="activity_id"/>
                                        <button name="action_open_url_video"
                                                icon="fa-youtube-play"
                                                type="object"/>
                                        <field name="activity_code"/>

                                        <field
                                                name="activity_speciality_ids"
                                                widget="many2many_tags"
                                                options="{'color_field': 'color'}"
                                        />

                                        <button name="action_delete_custom"
                                                attrs="{'column_invisible': [('parent.bool_in_request', '=', True)]}"
                                                icon="fa-close"
                                                class="text-danger"
                                                type="object"/>


                                    </tree>
                                    <form>
                                        <group>
                                            <field name="activity_id"/>
                                            <field name="activity_code"/>
                                            <field name="activity_att_documents" widget="many2many_binary"/>
                                        </group>
                                    </form>
                                </field>

                            </page>
                            <page name="urls" string="Links">
                                <field
                                        name="url_ids"
                                        widget="section_and_note_one2many"
                                        context="{'default_guideline_id' : id}"
                                        mode="tree,form">

                                    <tree string="Activies Lines"
                                          editable="bottom">
                                        <field name="name" widget="url"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="files" string="Files">
                                <group>
                                    <field name="att_documents" widget="many2many_binary"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="maintenance_guideline_view_tree" model="ir.ui.view">
            <field name="name">maintenance_guideline_view_tree</field>
            <field name="model">maintenance.guideline</field>
            <field name="arch" type="xml">
                <tree string="maintenance_guideline_tree">
                    <field name="equipment_id"/>
                    <field name="name"/>
                    <field name="guideline_type_id"/>
                    <field name="equipment_activity_id"/>
                    <field name="equipment_activity_uomctg_id" invisible="1"/>
                    <field name="measurement" widget="radio" options="{'horizontal': true}"/>
                </tree>
            </field>
        </record>

        <record id="maintenance_guideline_action" model="ir.actions.act_window">
            <field name="name">Maintenance General Guidelines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.guideline</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>