    <!-- equipment : views -->
    <record id="hr_equipment_view_search" model="ir.ui.view">
        <field name="name">equipment.search</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_search"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field string="Activity" name="equipment_activity_id"/>
            </field>
        </field>
    </record>

    <record id="hr_equipment_view_form" model="ir.ui.view">
        <field name="name">equipment.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <label for="period" position="attributes">
                <attribute name="invisible">1</attribute>
            </label>
            <xpath expr="//field[@name='period']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <label for="maintenance_duration" position="attributes">
                <attribute name="invisible">1</attribute>
            </label>
            <xpath expr="//field[@name='maintenance_duration']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//form/sheet/notebook" position="inside">
                <page string="Guideline Of Maintenances">
                    <field name="maintenance_guideline_ids" mode="kanban"
                           context="{'default_equipment_id': active_id, 'default_company_id': company_id}">
                        <kanban>
                            <field name="id"/>
                            <field name="equipment_id"/>
                            <field name="guideline_type_id"/>
                            <field name="name"/>
                            <field name="equipment_activity_id"/>
                            <field name="equipment_activity_uomctg_id"/>
                            <field name="measurement"/>
                            <field name="period"/>
                            <field name="value"/>
                            <field name="uom_id"/>
                            <field name="maintenance_duration"/>
                            <field name="description"/>
                            <field name="company_id"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_color_0 oe_kanban_global_click">
                                        <div class="o_kanban_image">
                                            <img alt="Guideline"
                                                 t-att-src="kanban_image(False, false, false, '/l10n_cl_maintenance/static/img/guidelines.png')"/>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <field name="name"/>
                                            <div t-if="record.maintenance_duration.raw_value">Duration: <field
                                                    name="maintenance_duration"/></div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>

                        <form string="Guideline Of Maintenance">
                            <sheet>
                                <div class="oe_title">
                                    <h1>
                                        <field name="name" readonly="1" attrs="{'invisible': [('name', '=', False)]}"/>
                                    </h1>
                                </div>
                                <hr/>
                                <group>
                                    <group>
                                        <field name="equipment_id" string="Equipo"/>
                                        <field name="maintenance_type" widget="radio" options="{'horizontal': true}"/>
                                        <field name="guideline_type_id"/>
                                        <field name="bool_in_request" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="equipment_activity_id"/>
                                        <field name="equipment_activity_uomctg_id" invisible="1"/>
                                        <field name="measurement" widget="radio" options="{'horizontal': true}"/>
                                        <div class="o_td_label">
                                            <label for="period" string="Frequency between each preventive maintenance"
                                                   attrs="{'invisible': [('measurement', '=', 'fixed')]}"/>
                                            <label for="value" string="Value for preventive maintenance"
                                                   attrs="{'invisible': [('measurement', '=', 'frequently')]}"/>
                                        </div>
                                        <div>
                                            <field name="period"
                                                   attrs="{'invisible': [('measurement', '=', 'fixed')], 'required': [('measurement', '=', 'frequently')]}"
                                                   nolabel="1"/>
                                            <field name="value"
                                                   attrs="{'invisible': [('measurement', '=', 'frequently')], 'required': [('measurement', '=', 'fixed')]}"
                                                   nolabel="1"/>
                                            <field name="uom_id" class="oe_no_button" nolabel="1"/>
                                        </div>
                                        <field name="maintenance_duration"/>
                                    </group>
                                </group>
                                <field name="description"/>
                                <field name="company_id" invisible="1"/>

                                <notebook>
                                    <page name="activities" string="Activities">
                                        <field
                                                attrs="{'readonly': [('bool_in_request', '=', True)]}"
                                                name="activities_ids"
                                                widget="section_and_note_one2many"
                                                context="{'default_guideline_id' : id}"
                                                mode="tree,form">

                                            <tree string="Activies Lines"
                                                  editable="bottom">
                                                <field name="sequence" widget="handle"/>
                                                <field name="guideline_id" invisible="1"/>
                                                <field name="company_id" invisible="1"/>
                                                <field name="activity_id"/>
                                                <field name="activity_code"/>
                                                <button name="action_open_url_video"
                                                        icon="fa-youtube-play"
                                                        type="object"/>
                                                <field
                                                        name="activity_speciality_ids"
                                                        widget="many2many_tags"
                                                        options="{'color_field': 'color'}"
                                                />

                                                <button name="action_delete_custom"
                                                        attrs="{'column_invisible': [('parent.bool_in_request', '=', True)]}"
                                                        icon="fa-close"
                                                        class="text-danger"
                                                        type="object"/>


                                            </tree>
                                            <form>
                                                <group>
                                                    <field name="activity_id"/>
                                                    <field name="activity_code"/>
                                                    <field name="activity_att_documents" widget="many2many_binary"/>
                                                </group>
                                            </form>
                                        </field>

                                    </page>
                                    <page name="urls" string="Urls">
                                        <field
                                                name="url_ids"
                                                widget="section_and_note_one2many"
                                                context="{'default_guideline_id' : id}"
                                                mode="tree,form">

                                            <tree string="Activies Lines"
                                                  editable="bottom">
                                                <field name="name" widget="url"/>
                                                <field name="description"/>
                                            </tree>
                                        </field>
                                    </page>

                                    <page name="files" string="Files">
                                        <group>
                                            <field name="att_documents" widget="many2many_binary"/>
                                        </group>
                                    </page>
                                </notebook>
                            </sheet>
                        </form>

                    </field>
                </page>
            </xpath>

            <div name="button_box" position="inside">
                <button class="oe_stat_button"
                        type="action"
                        name="%(maintenance_equipment_activity_tracking_action)d"
                        context="{'search_default_equipment_id': active_id, 'default_equipment_id': active_id}"
                        icon="fa-clock-o">
                    <field string="Tracking"
                           name="maintenance_actv_tracking_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>


    <!-- equipment activity : views -->
    <record id="maintenance_equipment_activity_view_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.activity.form</field>
        <field name="model">maintenance.equipment.activity</field>
        <field name="arch" type="xml">
            <form string="Equipment Activity">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(hr_equipment_action_from_activity_form)d"
                                class="oe_stat_button"
                                icon="fa-cubes"
                                type="action">
                            <field string="Equipment" name="equipment_count" widget="statinfo"/>
                        </button>
                        <button name="%(hr_equipment_request_action_link_from_activity_form)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-wrench">
                            <field string="Maintenance" name="maintenance_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Activity Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="uom_id" class="oe_inline"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"
                               class="oe_inline"/>
                    </group>
                </sheet>
                <!--                <div class="oe_chatter">-->
                <!--                    <field name="message_follower_ids" widget="mail_followers"/>-->
                <!--                    <field name="message_ids" widget="mail_thread"/>-->
                <!--                </div>-->
            </form>
        </field>
    </record>


</odoo>